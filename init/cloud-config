#cloud-config
timezone: Asia/Tokyo
disable_root: True

packages:
    - git

runcmd:
    - sudo sed -i.bak -e "s%http://ap-osaka-1-ad-1.clouds.archive.ubuntu.com/ubuntu%http://ftp.jaist.ac.jp/pub/Linux/ubuntu/%g" /etc/apt/sources.list
    - sudo apt update
    - sudo apt install docker.io docker-compose cron -y
    - sudo apt upgrade -y
    - sudo apt autoremove -y
    - sudo gpasswd -a ubuntu docker
    - sudo systemctl reboot
