#cloud-config
timezone: Asia/Tokyo
disable_root: True

packages:
    - git

runcmd:
    - sudo apt update
    - sudo apt upgrade -y
    - sudo apt autoremove -y
    - sudo apt install docker -y
    - sudo gpasswd -a ubuntu docker
    - sudo chown ubuntu /usr/local/bin/docker-compose
    - sudo -u ubuntu chmod +x /usr/local/bin/docker-compose
    - sudo systemctl reboot
